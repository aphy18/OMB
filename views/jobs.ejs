<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../styles/jobs.css">
</head>
<body>

    <%- include('partials/nav.ejs') %>

    <style>
        body {
    margin: 0;
    }

    </style>
    

    <div class="jobs-container">
        <% for (let job of getJobs) { %>
            <div class="job">
                <header class="job-header">
                    <span><%= job.job_name %>: </span>
                    <span><%= job.salary %>/hour</span>
                </header>
                <article class="job-body">
                    <p><%= job.job_description %></p>
                </article>
                <div class="job-footer">
                <% if (!job.apply) { %>
                    <button class='apply-button' disabled>Apply</button>
                    <a href="/jobs/<%=job.job_name%>/<%=job.job_id%>"><button class='work-button'>Work</button></a>
                    <form action="/jobs" method="POST">
                        <a href="/jobs"><button class='quit-button' type="submit" name="<%= job.job_id %>" value="<%= job.job_name %>">Quit</button></a>
                    </form>
                <% } else { %>
                    <a href="/apply/<%= job.job_id %>"><button class='apply-button'>Apply</button></a>
                    <button class='work-button' disabled>Work</button>
                    <button class='quit-button' disabled>Quit</button>
                <% } %>
                </div>
            </div>
        <% } %>
        
        </div>
      

</body>
</html>