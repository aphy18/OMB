<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/expenses.css">
    <title>Document</title>
</head>
<body>

    <style>
        body {
            margin: 0;
            overflow: hidden;
            overflow-y: scroll;
        }
    </style>

    <%- include('partials/nav.ejs') %>

    <div class="expenses-body-container">
        <% for (let expense of expenses) { %>
            <form action="/expenses" method="POST" class="expenses-container">
                <h1><%= expense.expense_name %> ($<%= expense.price %>)</h1>
                <img src="../images/<%= expense.image_src %>" class="expense-image">
                <button class="expense-button" name="<%= expense.expense_name %>">Pay</button>
            </form>
        <% } %>
    </div>

</body>
</html>